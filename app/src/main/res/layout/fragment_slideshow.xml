<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/cryptosA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Cryptos:"
            android:textSize="20sp" />

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/cryptosB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text="xxx"
            android:textSize="20sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></Space>

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/exchangesA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Exchanges:"
            android:textSize="20sp" />

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/exchangesB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text="xxx"
            android:textSize="20sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></Space>

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/marketCapA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Market Cap:"
            android:textSize="20sp" />

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/marketCapB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text="xxx"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radgrp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:textColor="#FFFFFF"
                android:id="@+id/all"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="All"></RadioButton>

            <RadioButton
                android:textColor="#FFFFFF"
                android:id="@+id/eth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Public Interest"></RadioButton>

            <RadioButton
                android:textColor="#FFFFFF"
                android:id="@+id/bnb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="24 Hour Change"></RadioButton>

            <RadioButton
                android:textColor="#FFFFFF"
                android:id="@+id/other1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Price"></RadioButton>

        </RadioGroup>
    </LinearLayout>


    <ListView
        android:textColor="#FFFFFF"
        android:id="@+id/listv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>