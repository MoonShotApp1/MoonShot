<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cryptosA"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end"
        android:text="Cryptos:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cryptosB"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start"
        android:text="xxx"
        android:textSize="20sp" />

    <Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
    </Space>

    <TextView
        android:id="@+id/exchangesA"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end"
        android:text="Exchanges:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/exchangesB"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start"
        android:text="xxx"
        android:textSize="20sp" />

    <Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
    </Space>

    <TextView
        android:id="@+id/marketCapA"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Market Cap:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/marketCapB"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start"
        android:text="xxx"
        android:textSize="20sp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/coinPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rocket_emoji">
    </ImageView>

    <TextView
        android:id="@+id/coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoinName">
    </TextView>

    <TextView
        android:id="@+id/coinSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSN">
    </TextView>

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rocket_emoji"/>
</LinearLayout>

<TextView
    android:id="@+id/price"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:text="$$$$$$$$$$">
</TextView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Links">
    </TextView>

    <Button
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website">
    </Button>

    <Button
        android:id="@+id/twit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter">
    </Button>

    <Button
        android:id="@+id/soc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chart">
    </Button>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/addressA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address">
    </TextView>

    <TextView
        android:id="@+id/addressB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx@099588465786478638">
    </TextView>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/dailVA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Volume">
    </TextView>

    <TextView
        android:id="@+id/dailVB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$$$$$$$$$$$$">
    </TextView>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/totalTransA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Transactions">
    </TextView>

    <TextView
        android:id="@+id/totalTransB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30000">
    </TextView>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/priceChangeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 Hour Price Change">
    </TextView>

    <TextView
        android:id="@+id/priceChangeB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$$$$$$">
    </TextView>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/priceHighA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 Hour High">
    </TextView>

    <TextView
        android:id="@+id/priceHighB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$$$$$$$">
    </TextView>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/priceLowA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 Hour Low">
    </TextView>

    <TextView
        android:id="@+id/priceLowB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$$$$$$$">
    </TextView>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/blockChainTypeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blockchain Type">
    </TextView>

    <TextView
        android:id="@+id/blockChainTypeAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ethethetheth">
    </TextView>
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:onClick="onClickClose"/>
</LinearLayout>