<?xml version="1.0" encoding="utf-8"?>
<!-- https://stackoverflow.com/questions/15111402/how-can-i-create-a-border-around-an-android-linearlayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/customborder">


    <ImageView
        android:id="@+id/iconPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rocket_emoji">
    </ImageView>

    <LinearLayout
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Tether USD"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/tv_symbol"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="USDT"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/tv_blockchaintype"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Ethereum"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/tv_currentprice"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="$2000"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>